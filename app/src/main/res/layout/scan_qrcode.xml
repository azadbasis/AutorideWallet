<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#E9E9E9"
    android:orientation="vertical"

    >
    <TextView
        android:id="@+id/imgClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="#ffffff"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center"
        android:background="@drawable/circle_white_border"/>

    <TextView
        android:id="@+id/tvQrCodeDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="Ask the marchent to scan the code"
        android:textColor="#707070" />

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_300sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        app:cardBackgroundColor="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvQrcodeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="VC to VC"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/tvQrCodeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tvQrcodeTitle"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:gravity="center"
                android:text="6506-0075-8127-1062"
                android:textAppearance="?android:textAppearanceMedium" />

            <ImageView
                android:id="@+id/imgQrCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tvQrCodeId"
                android:src="@drawable/ic_qrcode"

                />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>