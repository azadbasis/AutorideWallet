<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="#b4a77e"
    android:padding="5dp"
    android:layout_gravity="center">
    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
       android:src="@drawable/ic_close_black_24dp"
        android:textStyle="bold"
        android:padding="@dimen/_5sdp"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/circle_white_border"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/profile"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Azharul Islam"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mymensingh,Bangladesh"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_300sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        app:cardBackgroundColor="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvQrcodeDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="Ask the marchent to scan the code"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/tvQrCodeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tvQrcodeTitle"
                android:layout_marginTop="@dimen/_35sdp"
                android:gravity="center"
                android:text=""
                android:textAppearance="?android:textAppearanceLarge" />

            <ImageView
                android:id="@+id/imgQrCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_alignTop="@id/tvQrCodeId"
                android:src="@drawable/ic_qrcode"

                />
        </RelativeLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>