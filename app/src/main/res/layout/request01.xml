<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request With"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:autoSizeTextType="uniform"
        android:padding="@dimen/_6sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:gravity="center"
        android:textSize="@dimen/_36sdp"
        android:drawableLeft="@drawable/ic_requestwith"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="0dp"
       >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_account"
            android:text="Account Number"

            android:layout_height="match_parent" />


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_identity"
            android:autoSizeTextType="uniform"
            android:text="Account Identifier"

            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="140dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_autoload"
            android:text="Auto Load"

            android:layout_height="match_parent" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_send_request"
           android:text="Send Request"
            android:onClick="sendReuest"
            android:layout_height="match_parent" />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>